macro(include_if _TESTFILE)
    if(EXISTS "${_TESTFILE}")
        include("${_TESTFILE}")
    else(EXISTS "${_TESTFILE}")
        if(NOT "${ARGN}" STREQUAL "")
            include("${ARGN}")
        endif(NOT "${ARGN}" STREQUAL "")
    endif(EXISTS "${_TESTFILE}")
macro(include_if _TESTFILE)

